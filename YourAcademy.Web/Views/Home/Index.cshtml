@model YourAcademy.Web.Models.CourseViewModel

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

@if (Model.Courses != null && Model.Courses.Any())
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Instructor</th>
                <!-- Add other fields as necessary -->
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Price</td>
                    <td>@course.Instructor</td>
                    <!-- Add other fields as necessary -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No courses available.</p>
}